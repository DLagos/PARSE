<div class="row">
  <div class="col-md-2"></div>
  <div class="col col-md-8">
    <form action="/search_results" method="get" class="text-center">
      <div class="row">

        <div class="col-md-3 search-bar">
          <select name="issue_category">
            <% if(category.length){ %>
              <option value="" selected>Select your category</option>
              <% for(var i = 0;i < category.length;i++) { %>
              <option><%= category[i].name %></option>
              <% }

              }else{ %>
              <option>
              No categories
              </option>
              <% } %>
          </select>
        </div>

        <div class="col-md-6 search-bar">
          <input id="title" type="text" name="zip_code" placeholder="Enter Zipcode:" class="col-md-8">
        </div>
        <div class="col-md-3 search-bar">
          <button type="submit">Search</button>
        </div>



      </div>
    </form>
  </div>
</div>